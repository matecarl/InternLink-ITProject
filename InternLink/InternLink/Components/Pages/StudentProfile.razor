@code {
    private Models.StudentProfile? studentProfile;
    
    [SupplyParameterFromQuery]
    private string Id { get; set; }
    
    protected override async Task OnInitializedAsync()
    {
        await using var context = await DbFactory.CreateDbContextAsync();
        
        // TODO authorize only the owner and companies that have a swipe from the student
        
        var _studentProfile = await context.StudentProfiles.FirstOrDefaultAsync(x => x.UserId == Id);
        
        if (_studentProfile == null)
        {
            NavigationManager.NavigateTo("notfound");
        }
        
        studentProfile = _studentProfile;
    }

}