@using Microsoft.AspNetCore.Identity
@using InternLink.Data

@inject NavigationManager NavigationManager
@inject SignInManager<ApplicationUser> SignInManager

<nav class="navbar justify-between bg-base-300">
    <div>
        <NavLink class="btn btn-ghost text-lg" href="">
            <img alt="Logo" src="Images/Logo.png" width="100px"/>
        </NavLink>

        <NavLink class="btn btn-ghost btn-sm">
            Discover
        </NavLink>
    
        <AuthorizeView Roles="Student">
            <Authorized>
                <NavLink class="btn btn-ghost btn-sm">
                    Matches
                </NavLink>
            </Authorized>
        </AuthorizeView>

        <NavLink class="btn btn-ghost btn-sm">
            Companies
        </NavLink>
    </div>

    <div class="hidden sm:flex gap-2">
        <AuthorizeView>
            <Authorized>
                <!-- Dropdown menu -->
                <div class="dropdown dropdown-end">
                    
                    <div tabindex="0" role="button" class="btn btn-ghost btn-sm">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-5 w-5"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor">
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M4 6h16M4 12h16M4 18h7"/>
                        </svg>
                    </div>

                    <ul tabindex="0" class="dropdown-content menu z-[1] bg-base-200 p-6 rounded-box shadow w-56 gap-2">
                        <span>@context.User.Identity?.Name</span>
                        @* <AuthorizeView Roles="Student" Context="StudentContext"> *@
                        @*     <li> *@
                        @*         <NavLink href="/StudentProfile">Profile</NavLink> *@
                        @*     </li> *@
                        @* </AuthorizeView> *@
                        <li>
                            <NavLink href="/profile-redirect">Profile</NavLink>
                        </li>
                        <li>
                            <NavLink href="Account/Manage">Settings</NavLink>
                        </li>
                        <AuthorizeView Roles="Company" Context="CompanyContext">
                            @* <li> *@
                            @*     <NavLink href="/CompanyProfile">Profile</NavLink> *@
                            @* </li> *@
                            <li>
                                <NavLink href="Internships">My internships</NavLink>
                            </li>
                        </AuthorizeView>
                        <li>
                            <form action="Account/Logout" method="post">
                                <AntiforgeryToken/>
                                <input type="hidden" name="ReturnUrl" value=""/>
                                <button type="submit">
                                    Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>

            </Authorized>
            <NotAuthorized>
                <NavLink href="Account/Login" class="btn btn-sm">
                    Login
                </NavLink>
                <NavLink href="Account/Register" class="btn btn-primary btn-sm">
                    Sign-up
                </NavLink>
            </NotAuthorized>
            
        </AuthorizeView>
    </div>
</nav>
